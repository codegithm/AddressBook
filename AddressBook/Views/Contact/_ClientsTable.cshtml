@model List<Client>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Company</th>
            <th>Imported</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.Name</td>
                <td>@client.EmailAddress</td>
                <td>@client.ContactNumber</td>
                <td>@client.Company</td>
                <td>@client.ImportedAt.ToString("g")</td>
                <td>
                    <a asp-action="EditContact" asp-route-id="@client.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@client.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
