<div class="container mt-5" style="max-width: 600px;">
    <h2>Import Clients From CSV</h2>
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">📥 Import Client List</h5>
        </div>
        <div class="card-body">
            <form asp-action="ImportClientsCsv" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="csvFile">Choose a CSV file</label>
                    <input type="file" name="csvFile" id="csvFile" class="form-control-file" accept=".csv" required />
                    <small class="form-text text-muted">
                        Please upload a .csv file with Name, Email, Contact, Company.
                    </small>
                </div>
                <div class="mt-4 d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Upload File</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
